# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar --transparency
	status_command i3status-rs
	output primary
	tray_padding 2
	font pango:DejaVu Sans Mono 12
	workspace_min_width 40
    colors {
        statusline         $white
        background         $background
        separator          $background

        #                  BORDER       BACKGROUND   TEXT
        focused_workspace  $background $darkblue $white
        inactive_workspace $background $background $white
        active_workspace   $background $background $white
        urgent_workspace   $darkred     $darkred     $white
        binding_mode       $darkred     $darkred     $white
    }
}

# <colorclass>          <border> <background> <text> <indicator> <child_border>
client.focused          $darkblue      $darkblue      $white  $darkyellow  $darkblue
client.focused_inactive $darkblack      $darkblack      $darkyellow      $darkblack  $background
client.unfocused        $darkblack      $darkblack      $darkgray      $darkblack  $background
client.urgent           $darkred    $darkred    $black      $darkred    $darkred
client.background       $black

